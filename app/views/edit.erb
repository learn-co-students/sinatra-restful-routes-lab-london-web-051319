  <body>

      <h1>Edit Recipe: <%= @recipe.name %></h1>

      <form method="post" action="/recipes/<%= @recipe.id %>">
      <input id="hidden" type="hidden" name="_method" value="patch" />
        <label for="name">Recipe name</label><br><br>
        <input type="text" name="name" placeholder="<%= @recipe.name %>" required /><br><br>

        <label for="ingredients">Ingredients</label><br><br>
        <input type="text" name="ingredients" placeholder="<%= @recipe.ingredients %>"/><br><br>

        <label for="cook_time">Cook time required</label><br><br>
        <input type="text" name="cook_time" placeholder="<%= @recipe.cook_time %>"/><br><br>

        <input type="submit" name="submit"/>

        </form>


      <br><br>

      <a href="/recipes">Go back</a>
    </body>
  </html>
